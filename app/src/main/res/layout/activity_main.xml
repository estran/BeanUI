<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/beanbg">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onBtn"
        android:background="@drawable/startbutton"
        android:minHeight="120px"
        android:minWidth="250px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Giggle Bean"
        android:id="@+id/textView"
        android:textColor="#ff7e7fff"
        android:typeface="monospace"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundOnBtn"
        android:background="@drawable/onbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:clickable="true"
        android:layout_below="@+id/lightsOffBtn"
        android:layout_toRightOf="@+id/btnOn"
        android:layout_toEndOf="@+id/btnOn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundOffBtn"
        android:background="@drawable/offbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:clickable="true"
        android:layout_toEndOf="@+id/onBtn"
        android:layout_above="@+id/onBtn"
        android:layout_toRightOf="@+id/onBtn"
        android:layout_marginBottom="34dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightsOffBtn"
        android:background="@drawable/offbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:layout_above="@+id/soundOffBtn"
        android:layout_alignLeft="@+id/soundOffBtn"
        android:layout_alignStart="@+id/soundOffBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightsOnBtn"
        android:background="@drawable/onbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:layout_above="@+id/soundOnBtn"
        android:layout_alignLeft="@+id/soundOnBtn"
        android:layout_alignStart="@+id/soundOnBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lights?"
        android:id="@+id/textView3"
        android:textColor="#ffdccaff"
        android:typeface="monospace"
        android:layout_alignBottom="@+id/soundOnBtn"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sound?"
        android:id="@+id/textView2"
        android:textColor="#ffe3cbff"
        android:typeface="monospace"
        android:layout_toStartOf="@+id/onBtn"
        android:layout_above="@+id/soundOnBtn"
        android:layout_toLeftOf="@+id/onBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/action_settings"
        android:id="@+id/textView4"
        android:typeface="monospace"
        android:textColor="#ffded1ff"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lightsOffBtn"
        android:layout_toStartOf="@+id/lightsOffBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED&apos;s On"
        android:id="@+id/btnOn"
        android:layout_gravity="left"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnOff"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recallibrate"
        android:id="@+id/recallibrateBtn"
        android:layout_below="@+id/btnOn"
        android:layout_toLeftOf="@+id/lightsOffBtn"
        android:layout_toStartOf="@+id/lightsOffBtn"
        android:layout_marginTop="36dp" />

</RelativeLayout>
