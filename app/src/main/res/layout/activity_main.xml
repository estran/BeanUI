<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffdbe2ff"
    android:id="@+id/layout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:background="@drawable/startbutton"
        android:minHeight="100px"
        android:minWidth="200px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_title"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#ff7e7fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/use_sound"
        android:id="@+id/textView2"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView3"
        android:textColor="#ff6e6dff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/use_lights"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff6566ff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundOnBtn"
        android:background="@drawable/onbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/startButton"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundOffBtn"
        android:background="@drawable/offbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:layout_alignTop="@+id/soundOnBtn"
        android:layout_toRightOf="@+id/startButton"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightsOffBtn"
        android:background="@drawable/offbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/startButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightsOnBtn"
        android:background="@drawable/onbutton"
        android:minHeight="50dp"
        android:minWidth="75dp"
        android:layout_alignTop="@+id/lightsOffBtn"
        android:layout_toLeftOf="@+id/startButton" />

</RelativeLayout>
